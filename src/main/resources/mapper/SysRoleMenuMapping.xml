<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.base.framework.admin.mapper.SysRoleMenuMappingMapper">
    <insert id="save">
        INSERT INTO sys_role_menu_mapping (id, menu_id, role_id)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id}, #{item.menuId}, #{item.roleId})
        </foreach>
    </insert>

    <delete id="delete">
        DELETE FROM sys_role_menu_mapping WHERE role_id = #{id}
    </delete>

    <select id="getMenuIds" resultType="java.lang.Long">
        SELECT menu_id AS menuId FROM sys_role_menu_mapping WHERE role_id = #{id}
    </select>

</mapper>
